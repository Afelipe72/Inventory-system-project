@model InventorySystemProject.Models.Item
@{
    ViewData["Title"] = "Add an item";
}


@if (User.IsInRole("Manager"))
{
    <h3>Add an item</h3>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Name"> Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        @* Description *@
        <div class="form-group">
            <label for="Description"> Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="form-group">
            <label for="Price"> Price</label>
            <input type="number" class="form-control" asp-for="Price" />
        </div>
        <div class="form-group">
            <label for="Category"> Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="Suppliers"> Suppliers</label>
            <select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="form-control"></select>
        </div>
        @* QuantityInStock *@
        <div class="form-group">
            <label for="QuantityInStock"> Quantity in stock</label>
            <input type="number" class="form-control" asp-for="QuantityInStock" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}

else
{
    <h1> Unauthorized access. </h1>
    <p> Please request access to your manager. </p>
}