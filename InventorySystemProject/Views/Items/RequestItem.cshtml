@model ItemRequest

@{
    ViewData["Title"] = "request an item";
}


@if (User.IsInRole("Member"))
{
    <h3>Request an item</h3>
   
<form asp-action="RequestItem" method="post">
    <input type="hidden" asp-for="ItemId" readonly/>

    <div class="form-group">
        <label for="Name"> Name</label>
        <p class="form-control"> @Model.Items?.Name </p>
    </div>
    @* Description *@
    <div class="form-group">
        <label for="Description"> Description</label>
        <p class="form-control"> @Model.Items?.Description </p>
    </div>

    <div class="form-group">
        <label for="Price"> Price</label>
        <p class="form-control"> @Model.Items?.Price </p>
    </div>

    <div class="form-group">
        <label for="Category"> Category</label>
        <h1 class="form-control" type="text"> @Model.Items?.Categories?.Name </h1>
    </div>

    <div class="form-group">
        <label for="Suppliers"> Suppliers</label>
        <p class="form-control" type="text"> @Model.Items?.Supplier?.Name</p>
    </div>

    @* QuantityInStock 
        @{
            int Quantity = ViewBag.QuantityInStock ?? 0;
            <p> @Quantity </p>
        }*@
        
    <div class="form-group">
        <label for="QuantityInStock"> Quantity in stock</label>
            
        <input type="number" class="form-control" asp-for="Quantity"/>
            <p class="text-danger"> @ViewBag.QuantityErrorMessage </p>
            <p class="text-danger"> @ViewBag.RequestErrorMessage </p>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

}
else
{
    <h1> Unauthorized access. </h1>
    <p> Please request access to your manager. </p>
}
